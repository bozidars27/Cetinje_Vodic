<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_gallery_pager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cetinje.bozo.cetinjevodic.GalleryPager">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >

    </android.support.v4.view.ViewPager>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:srcCompat="@android:drawable/ic_menu_add"
        android:id="@+id/fab"
        app:backgroundTint="@color/colorAccent"
        app:elevation="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="525dp" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:id="@+id/description"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_height="550dp"
        android:background="@color/colorAccentTransparent"
        android:textColor="@android:color/white"
        android:gravity="center_horizontal"
        android:paddingLeft="@dimen/description_padding_horizontal"
        android:paddingStart="@dimen/description_padding_horizontal"
        android:paddingRight="@dimen/description_padding_horizontal"
        android:paddingEnd="@dimen/description_padding_horizontal"
        android:paddingBottom="@dimen/description_padding_horizontal"
        android:textSize="@dimen/description_font"
        android:paddingTop="@dimen/description_padding_top" />


</RelativeLayout>
