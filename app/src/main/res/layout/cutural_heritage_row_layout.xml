<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/culturalHeritageLinearLayout"
            android:layout_toRightOf="@+id/culturalHeritageLinearLayout"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/cultural_heritage_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/culturalHeritageLinearLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:id="@+id/cultural_heritage_text_view_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/title_restaurant_left"
                android:layout_marginTop="@dimen/title_restaurant_top"
                android:text="@string/cultural_heritage_name"
                tools:textAlignment="textStart" />

            <TextView
                android:id="@+id/cultural_heritage_text_view_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/cultural_heritage_text_view_title"
                android:layout_alignStart="@+id/cultural_heritage_text_view_title"
                android:layout_below="@+id/cultural_heritage_text_view_title"
                android:layout_marginLeft="@dimen/title_restaurant_left"
                android:layout_marginTop="@dimen/title_restaurant_top"
                android:text="@string/cultural_heritage_description" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>